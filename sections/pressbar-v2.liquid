<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
<script src="{{ 'flickity.js' | asset_url }}"></script>
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
{{ 'flickity.css' | asset_url | stylesheet_tag }}

<style>
  .right_text strong{
  	color : {{section.settings.color_title}}
  }
  
</style>


<section class="image-press" style='font-family:{{section.settings.main_font_new.family}},{{section.settings.main_font_new.fallback_families}};'>
  <div data-slider style="padding: {{section.settings.padding_size}}px 0px; background-color :  {{section.settings.background_color}}">
    <div data-slides class="main-carousel">
    	{%for block in section.blocks%}
      		<div data-slide class="carousel-cell" style="transform: translateX(1vw)">
              {% if block.settings.header_logo_image.alt %}
              <a href="{{block.settings.logo_link}}"> 
              	<img class="head-logo {{section.settings.header_logo_position}}" src="{{block.settings.header_logo_image | img_url: '100x'}}" alt="{{block.settings.header_logo_image.alt}}" /> 
              </a>  {% endif %}
<!--               <img class="image-{{section.settings.image_type}}" src="{{ block.settings.image | image_url: master }}" alt="{{ block.settings.image.alt }}" /> -->
      		
              <div class="block-content">
                  <div class="bottom_text">
                    <div  class="ff-rmed" style='font-size : {{section.settings.font_size_left_text}}px; color: {{section.settings.color_title}};line-height:{{section.settings.font_size_left_text}}px'>{{block.settings.left_text}}</div>
                    <div class="image-content-wrap">
                    <div class="ff-rreg right_text" style="font-size : {{section.settings.font_size_right_text}}px; color: {{section.settings.color_title}} ; line-height:{{section.settings.font_size_right_text}}px">{{block.settings.right_text}}</div>
                    
                    {% if block.settings.header_logo_image.alt %}
                    <img class="head-logo bottom-logo" src="{{block.settings.header_logo_image | img_url: '100x'}}" alt="{{block.settings.header_logo_image.alt}}" /> 
                    {% endif %}
                    </div>
                   </div>
              </div>
      		</div>
      	{%endfor%}
    </div>
    <div class="event_type" style="display: none">{{section.settings.event_type}}</div>
<!--     <div class="dynamic-block-content-animations"></div> -->
  </div>
</section>

 
